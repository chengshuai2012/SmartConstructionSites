                                android:textColor="#999999"
                                android:textSize="13sp"
                                android:layout_marginTop="7dp"
                                android:id="@+id/person_emp_count"
                                />
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:layout_constraintTop_toTopOf="@+id/person_emp_count_text"
                                app:layout_constraintBottom_toBottomOf="@+id/person_emp_count_text"
                                app:layout_constraintLeft_toLeftOf="@+id/person_emp_count"
                                android:background="@drawable/shape_oval_red"
                                android:id="@+id/oval_person_emp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/person_emp_count"
                                app:layout_constraintLeft_toRightOf="@+id/oval_person_emp"
                                android:textColor="#999999"
                                android:textSize="15sp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="4dp"
                                android:id="@+id/person_emp_count_text"
                                />
                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/icon_emp"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_white_with_corner_16"
                            android:layout_marginLeft="15dp"
                            android:layout_height="140dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:text="人员分析"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/person_any"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/person_any"
                                app:layout_constraintLeft_toLeftOf="@+id/person_any"
                                android:text="今日考勤"
                                android:textColor="#999999"
                                android:textSize="13sp"
                                android:layout_marginTop="7dp"
                                android:id="@+id/person_any_count"
                                />
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:layout_constraintTop_toTopOf="@+id/person_any_count_text"
                                app:layout_constraintBottom_toBottomOf="@+id/person_any_count_text"
                                app:layout_constraintLeft_toLeftOf="@+id/person_any_count"
                                android:background="@drawable/shape_oval_qing"
                                android:id="@+id/oval_person_any"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/person_any_count"
                                app:layout_constraintLeft_toRightOf="@+id/oval_person_any"
                                android:textColor="#999999"
                                android:textSize="15sp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="4dp"
                                android:id="@+id/person_any_count_text"
                                />
                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/icon_any"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/cl_camera"
                            android:background="@drawable/shape_white_with_corner_16"
                            android:layout_height="140dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:text="实时监控"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/video_now"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/video_now"
                                app:layout_constraintLeft_toLeftOf="@+id/video_now"
                                android:text="摄像头总数"
                                android:textColor="#999999"
                                android:textSize="13sp"
                                android:layout_marginTop="7dp"
                                android:id="@+id/video_now_count"
                                />
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:layout_constraintTop_toTopOf="@+id/video_now_count_text"
                                app:layout_constraintBottom_toBottomOf="@+id/video_now_count_text"
                                app:layout_constraintLeft_toLeftOf="@+id/video_now_count"
                                android:background="@drawable/shape_oval_red"
                                android:id="@+id/oval_video_now"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/video_now_count"
                                app:layout_constraintLeft_toRightOf="@+id/oval_video_now"
                                android:textColor="#999999"
                                android:textSize="15sp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="4dp"
                                android:id="@+id/video_now_count_text"
                                />
                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/icon_video"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_white_with_corner_16"
                            android:layout_marginLeft="15dp"
                            android:layout_height="140dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:text="环境监测"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/env_now"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/env_now"
                                app:layout_constraintLeft_toLeftOf="@+id/env_now"
                                android:text="实时温度"
                                android:textColor="#999999"
                                android:textSize="13sp"
                                android:layout_marginTop="7dp"
                                android:id="@+id/temp_now"
                                />
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:layout_constraintTop_toTopOf="@+id/temp_nowt_text"
                                app:layout_constraintBottom_toBottomOf="@+id/temp_nowt_text"
                                app:layout_constraintLeft_toLeftOf="@+id/temp_now"
                                android:background="@drawable/shape_oval_blue"
                                android:id="@+id/oval_temp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/temp_now"
                                app:layout_constraintLeft_toRightOf="@+id/oval_temp"
                                android:textColor="#999999"
                                android:textSize="15sp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="4dp"
                                android:id="@+id/temp_nowt_text"
                                />
                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/icon_temp"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_white_with_corner_16"
                            android:layout_height="140dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:text="能耗监测"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/energy_now"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/energy_now"
                                app:layout_constraintLeft_toLeftOf="@+id/energy_now"
                                android:text="累计耗电"
                                android:textColor="#999999"
                                android:textSize="13sp"
                                android:layout_marginTop="7dp"
                                android:id="@+id/energy_now_count"
                                />
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:layout_constraintTop_toTopOf="@+id/energy_now_count_text"
                                app:layout_constraintBottom_toBottomOf="@+id/energy_now_count_text"
                                app:layout_constraintLeft_toLeftOf="@+id/energy_now_count"
                                android:background="@drawable/shape_oval_qing"
                                android:id="@+id/oval_energy_now"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/energy_now_count"
                                app:layout_constraintLeft_toRightOf="@+id/oval_energy_now"
                                android:textColor="#999999"
                                android:textSize="15sp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="4dp"
                                android:id="@+id/energy_now_count_text"
                                />
                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/icon_energy"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
