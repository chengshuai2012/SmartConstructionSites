                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:layout_constraintTop_toTopOf="@+id/car_now_count_text"
                                app:layout_constraintBottom_toBottomOf="@+id/car_now_count_text"
                                app:layout_constraintLeft_toLeftOf="@+id/car_now_count"
                                android:background="@drawable/shape_oval_qing"
                                android:id="@+id/oval_car_now"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/car_now_count"
                                app:layout_constraintLeft_toRightOf="@+id/oval_car_now"
                                android:textColor="#999999"
                                android:textSize="15sp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="4dp"
                                android:id="@+id/car_now_count_text"
