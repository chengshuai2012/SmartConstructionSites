                                app:layout_constraintLeft_toLeftOf="parent"
                                android:text="设备管理"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/device_manager"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/device_manager"
                                app:layout_constraintLeft_toLeftOf="@+id/device_manager"
                                android:text="设备总数"
                                android:textColor="#999999"
                                android:textSize="13sp"
                                android:layout_marginTop="7dp"
                                android:id="@+id/device_manager_count"
                                />
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:layout_constraintTop_toTopOf="@+id/device_manager_count_text"
                                app:layout_constraintBottom_toBottomOf="@+id/device_manager_count_text"
                                app:layout_constraintLeft_toLeftOf="@+id/device_manager_count"
                                android:background="@drawable/shape_oval_red"
