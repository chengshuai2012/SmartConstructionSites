<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/realplay_page_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_light_blue_bg"
    android:orientation="vertical">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:id="@+id/cl_title"
       android:fitsSystemWindows="true"
       android:layout_marginTop="10dp"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/back"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_marginLeft="20dp"
           android:src="@drawable/icon_back"
           app:tint="@color/black"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="实时监控"
           android:textColor="@color/black"
           android:textSize="20sp"
           android:textStyle="bold"
           app:layout_constraintBottom_toBottomOf="@+id/back"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="@+id/back" />
       <View
           android:layout_width="1dp"
           android:layout_height="15dp"
           app:layout_constraintLeft_toLeftOf="@+id/parent"
           app:layout_constraintTop_toBottomOf="@+id/back"
           />
   </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/realplay_play_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/vg_play_window"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <SurfaceView
                android:id="@+id/realplay_sv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />
            <!-- 播放器工具条 -->
            <include
                layout="@layout/ez_play_control"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="在线直播"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textStyle="bold"
            android:id="@+id/title_bottom"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:text="流畅"
                android:padding="10dp"
                android:id="@+id/flow"
                />
            <View
                android:layout_width="1dp"
                android:background="#666666"
                android:layout_height="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp"
                android:text="高清"
                android:padding="10dp"
                android:id="@+id/hd"
                />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/info"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_white_with_corner_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_bottom"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:layout_width="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="80dp"
                android:layout_marginLeft="14dp"
                android:id="@+id/camera_image"
                android:src="@drawable/shape_white_with_corner_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/camera_image"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="14dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                android:layout_marginTop="14dp"
                android:textSize="14sp"
                android:text="设  备 号"
                android:textColor="#999999"
                android:layout_marginBottom="20dp"
                android:id="@+id/device_id"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/device_id"
                app:layout_constraintLeft_toRightOf="@+id/device_id"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:id="@+id/device_id_text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/status"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="22dp"
                android:paddingVertical="4dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="15sp"
                android:id="@+id/replay"
                android:layout_gravity="bottom"
                android:text="回放"
                android:background="@drawable/border_blue_with_corner"
                android:textColor="@color/blue"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/control_cl"
            app:layout_constraintTop_toBottomOf="@+id/info"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摄像头控制器"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/title_control"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="180dp"
                android:background="@drawable/shape_ring"
                android:id="@+id/dir_cl"
                app:layout_constraintTop_toBottomOf="@+id/title_control"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:layout_height="180dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_up"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:padding="25dp"
                    android:id="@+id/up"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_left"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/left"
                    android:padding="25dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_right"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/right"
                    android:padding="25dp"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_down"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/bottom"
                    android:padding="25dp"
                    app:layout_constraintRight_toRightOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/dir_cl"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="100dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_big"
                    android:gravity="center"
                    android:background="@drawable/shape_white_with_corner_10"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:id="@+id/big_icon"
                        android:src="@drawable/icon_big"
                        />
                    <TextView
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="放大"
                        android:id="@+id/big"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:id="@+id/ll_small"
                    android:background="@drawable/shape_white_with_corner_10"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:id="@+id/small_icon"
                        android:src="@drawable/icon_small"
                        />
                    <TextView
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="缩小"
                        android:id="@+id/small"
                        />

                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>