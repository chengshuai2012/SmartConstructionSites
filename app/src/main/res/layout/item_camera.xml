<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.aoecloud.smartconstructionsites.bean.CameraListItem"/>
        <variable
            name="data"
            type="com.aoecloud.smartconstructionsites.bean.CameraListItem" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_white_with_corner_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:layout_width="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="80dp"
                android:id="@+id/camera_image"
                android:src="@drawable/shape_white_with_corner_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/camera_image"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:text="@{data.device_name}"
                android:layout_marginLeft="14dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                android:layout_marginTop="14dp"
                android:textSize="14sp"
                android:text="设  备 号"
                android:textColor="#999999"
                android:id="@+id/device_id"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/device_id"
                app:layout_constraintLeft_toRightOf="@+id/device_id"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:text="@{data.deviceSerial}"
                android:textColor="@color/black"
                android:id="@+id/device_id_text"
                />


            <TextView
                android:layout_width="wrap_content"
                android:gravity="right"
                android:layout_marginRight="14dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@{data.online==0?@string/online:@string/offline}"
                android:textColor="@{data.online==0?@color/blue:@color/gray}"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="22dp"
                    android:paddingVertical="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="15sp"
                    android:text="直播"
                    android:layout_marginTop="10dp"
                    android:id="@+id/now_play"
                    android:background="@drawable/border_blue_with_corner"
                    android:textColor="@color/blue"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="22dp"
                    android:paddingVertical="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="15sp"
                    android:id="@+id/replay"
                    android:text="回放"
                    android:background="@drawable/border_blue_with_corner"
                    android:textColor="@color/blue"
                    />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>