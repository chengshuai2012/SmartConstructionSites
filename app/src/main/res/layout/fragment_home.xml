<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/home"
        android:textSize="32sp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/home"
        android:layout_marginTop="90dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/home"
        android:id="@+id/search_ll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_white_with_corner"
        android:layout_height="40dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="搜索项目名称"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="20dp"
            android:textColorHint="#CCCCCC"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:background="@null"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_search"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="150dp"
        app:banner_auto_loop="true"
        app:banner_indicator_gravity="right"
        app:banner_indicator_height="10dp"
        app:banner_indicator_marginBottom="15dp"
        app:banner_indicator_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:banner_infinite_loop="true"
        app:banner_loop_time="3000"
        app:banner_orientation="horizontal"
        app:layout_collapseMode="parallax"
        app:layout_constraintTop_toBottomOf="@+id/search_ll"
        app:banner_radius="12dp"
        app:layout_collapseParallaxMultiplier="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>